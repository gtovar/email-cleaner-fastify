# --- Runtime ---
NODE_ENV=development
PORT=3000
PORT_HTTPS=3000
PORT_HTTP=3001
# No usar este valor en producci√≥n; gestionar por Secret Manager/Vault/KMS
INTERNAL_JWT_SECRET=change-me
SESSION_JWT_TTL_SECONDS=3600
TOKEN_ENCRYPTION_KEY=base64-32-bytes
FRONTEND_ORIGIN=http://localhost:5173
TLS_KEY_PATH=
TLS_CERT_PATH=

# --- Python FastAPI microservice ---
# Para Docker usar el nombre del servicio; para host-local, localhost:
ML_BASE_URL=http://localhost:8000
# Timeout por defecto (ms) para llamadas al ML.
ML_TIMEOUT_MS=5000

# --- Database (Sequelize) ---
# Si usas Docker: DB_HOST=db ; si host-local: 127.0.0.1 (mapeado por compose)
DB_HOST=${DB_HOST:-db}
DB_PORT=5432
DB_USERNAME=email
DB_PASSWORD=email
DB_DATABASE=email_cleaner
DB_DIALECT=postgres

# Opcional: URL unificada (tiene prioridad en config.cjs)
# DATABASE_URL=postgres://email:email@db:5432/email_cleaner

# --- Google OAuth (placeholders) ---
GOOGLE_CLIENT_ID=replace_me.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=replace_me
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# --- Google OAuth (mobile PKCE) ---
# iOS
GOOGLE_MOBILE_CLIENT_ID_IOS=replace_me.apps.googleusercontent.com
GOOGLE_MOBILE_CLIENT_SECRET_IOS=
GOOGLE_MOBILE_REDIRECT_URI_IOS=com.googleusercontent.apps.replace_me:/oauth2redirect
# Android
GOOGLE_MOBILE_CLIENT_ID_ANDROID=replace_me.apps.googleusercontent.com
GOOGLE_MOBILE_CLIENT_SECRET_ANDROID=
GOOGLE_MOBILE_REDIRECT_URI_ANDROID=com.googleusercontent.apps.replace_me:/oauth2redirect
# Legacy single-client fallback
GOOGLE_MOBILE_CLIENT_ID=
GOOGLE_MOBILE_CLIENT_SECRET=
GOOGLE_MOBILE_REDIRECT_URI=

# --- Integraciones opcionales ---
N8N_BASE_URL=http://localhost:5678
TELEGRAM_CHAT_ID=replace_me
